<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
                android:layout_marginVertical="10dp"
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FDA98F"
                app:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:divider="@drawable/divider_drawable"
                    android:adjustViewBounds="true"
                    android:showDividers="middle"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    >
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:text=""
                        />
                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="1"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="  9:00-10:30"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class1"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="10:40-12:10"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class2"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="3"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="12:40-14:10"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class3"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="4"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="14:20-15:50"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class4"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="5"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="16:20-17:50"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class5"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginVertical="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:divider="@drawable/hor_div_drawable"
                        android:adjustViewBounds="true"
                        android:showDividers="middle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:text="6"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="18:00-19:30"/>
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/class6"
                            android:textColor="#99000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:background="@android:color/transparent"
                            android:textSize="15sp"
                            android:layout_weight="4"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

</LinearLayout>